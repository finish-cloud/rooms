<h2>ルーム情報登録</h2>

<%= form_for @room do |f| %>
<table>
  <tr>
    <th><%= f.label :name, "ルーム名" %></th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th> <%= f.label :content, "ルーム紹介" %></th>
    <td><%= f.date_field :introduction %></td>
  </tr>
  <tr>
    <th> <%= f.label :integer, "料金" %></th>
    <td><%= f.date_field :charge %></td>
  </tr>
  <tr>
    <th><%= f.label :string, "住所" %></th>
    <td> <%= f.check_box :address %>
      <br>終日の場合はチェックを入れてください</br>
    </td>
  </tr>
  <tr>
    <th> <%= f.label :string, "ルーム画像" %></th>
    <td><%= f.text_field :image %></td>
  </tr>
</table>
<div>
  <ul>
    <li><%= f.submit "登録"%></li>
    <li><%= link_to "ユーザー情報一覧に戻る", :rooms %></li>
  </ul>
</div>
<% end %>
